{
    "version": "0.3.2",
    "name":"virtualshock-configuration-file",
    "description": "Configure ISA and RTL mapping",
    "options":{
        "word":"32"
    },
    "isa":{
        "add":{
            "type":"register",
            "copBytes":"000000"
        },
        "sub":{
            "type":"register",
            "copBytes":"000001"
        },
        "and":{
            "type":"register",
            "copBytes":"000101"
        },
        "or":{
            "type":"register",
            "copBytes":"000110"
        },
        "addi":{
            "type":"immediate",
            "copBytes":"001010"
        },
        "subi":{
            "type":"immediate",
            "copBytes":"001011"
        },



        "sw":{
            "type":"immediate",
            "copBytes":"010100",
            "fields":["cost(rs1)","rs2"]
        },
        "lw":{
            "type":"immediate",
            "copBytes":"010101",
            "fields":["rs2","cost(rs1)"]
        },


        "jr":{
            "type":"register",
            "copBytes":"010011"
        },
        "j":{
            "type":"jump",
            "copBytes":"010100",
            "fields":["cost"]
        },


        "beqz": {
            "type":"immediate",
            "copBytes":"011010",
            "fields":["r0","rs1","cost"]
        },
        "bneqz": {
            "type":"immediate",
            "copBytes":"011011",
            "fields":["r0","rs1","cost"]
        },


        "seq":{
            "type":"register",
            "copBytes":"011100"
        },
        

        "push":{
            "type":"immediate",
            "copBytes":"101000",
            "fields":["r30","rs1","0"]
        },
        "pop":{
            "type":"immediate",
            "copBytes":"101001",
            "fields":["r30","rs1","0"]
        },


        "call":{
            "type":"immediate",
            "copBytes":"101010",
            "fields":["r30","r0","cost"]
        },
        "callr":{
            "type":"immediate",
            "copBytes":"101011",
            "fields":["r30","rs1","0"]
        },
        "ret":{
            "type":"immediate",
            "copBytes":"101100",
            "fields":["r30","r0","0"]
        },



        "out":{
            "type":"immediate",
            "copBytes":"101101",
            "fields":["cost(rs1)","rs2"]
        },
        "in":{
            "type":"immediate",
            "copBytes":"101110",
            "fields":["rs2","cost(rs1)"]
        },


        "sti":{
            "type": "register",
            "copBytes": "101111",
            "fields":["r0","r0","r0"]
        },
        "cli":{
            "type": "register",
            "copBytes": "110000",
            "fields":["r0","r0","r0"]
        },
        "rfe":{
            "type": "register",
            "copBytes": "110001",
            "fields":["r0","r30","r0"]
        },



        "print":{
            "type":"register",
            "copBytes":"111110",
            "fields":["r0","rs1","r0"]
        },
        "halt":{
            "type":"register",
            "copBytes":"111111",
            "fields":["r0","r0","r0"]
        }
    },
    "rtlMap": {
        "alu": {
            "+": [4],
            "-": [4,3,0],
            "+1": [4,3,1],
            "-1": [4,1,0],
            "x": [4,1],
            "y": [4,2],
    
            ">": [42, 4,3,0],
            "<=": [43, 4,3,0],
            ">=": [43,42, 4,3,0],
            "==": [44, 4,3,0],
            "!=": [44,42, 4,3,0],
            "<": [44,43, 4,3,0]
    
        },
        "registers": {
            "a": {"oe2": 7,"oe1": 6,"wr": 5},
            "b": {"oe2": 10,"oe1": 9,"wr": 8},
            "c": {"oe2": 13,"oe1": 12,"wr": 11},
            "pc": {"oe2": 16,"oe1": 15,"wr": 14},
            "temp": {"oe2": 19,"oe1": 18,"wr": 17},
            "iar": {"oe2": 22,"oe1": 21,"wr": 20},
            "mar": {"oe2": 25,"oe1": 24,"wr": 23},
            "mdr": {"oe2": 28,"oe1": 27,"wr": 26},
            "ir": {"wr": 49},
            "r30": {"oe2":56,"oe1":55,"wr":54}
        },
        "datapath":{
            "md": 29,
            "ma": 30,
            "ris": 31,
            "cost": 38,
            "wr": 39,
            "rd2": 40,
            "rd1": 41,
            "rs2_as_dest": 50,
            "rs1_as_dest": 51
        },
        "memory":{
            "memrd": 34,
            "memwr": 35,
            "iord": 36,
            "iowr": 37
        },
        "udc":{
            "ien_wr": 32,
            "ien": 33,
            "branch_enable": 46,
            "bneqz": 47,
            "ask_ready": 52,
            "start_inta": 53
        }
    }
}